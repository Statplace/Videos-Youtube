
# Instalando o pacote
install.packages("GGally")
install.packages("ggplot2")

# Carregando pacote
library(GGally)
library(ggplot2)

# Carregue o conjunto de dados mtcars
data(mtcars)

# Crie um gráfico de matriz de correlação com GGally
cor_matrix <- cor(mtcars, method = "pearson")

ggcorr(cor_matrix, 
       label = TRUE, 
       digits = 2,
       name = "",
       low = "#F21A00",
       mid = "#EEEEEE",
       high = "#3B9AB2",
       label_size = 3, 
       label_round = 2)



cor_matrix <- cor(mtcars, method = "spearman")

ggcorr(cor_matrix, 
       label = TRUE, 
       digits = 2,
       name = "",
       low = "#F21A00",
       mid = "#EEEEEE",
       high = "#3B9AB2",
       label_size = 3, 
       label_round = 2)
